/*
 * HotSoup! Theme Styles
 *
 * These rules are intentionally specific to override parent theme (e.g., BuddyX) styles.
*/

/* ==========================================================================
   1. Dark Mode Theme
   ========================================================================== */

body.theme-dark-mode {
    background-color: #121212 !important;
    color: #e0e0e0 !important;
}

/* --- General Layout & Widgets --- */
body.theme-dark-mode #page,
body.theme-dark-mode .site-header,
body.theme-dark-mode .widget,
body.theme-dark-mode .entry-content,
body.theme-dark-mode .entry-summary,
body.theme-dark-mode footer.site-footer {
    background-color: #1e1e1e !important;
    border-color: #333 !important;
}

body.theme-dark-mode #secondary .widget {
    background-color: #2a2a2a !important;
    border: 1px solid #444 !important;
}

/* --- Typography & Links --- */
body.theme-dark-mode h1,
body.theme-dark-mode h2,
body.theme-dark-mode h3,
body.theme-dark-mode h4,
body.theme-dark-mode h5,
body.theme-dark-mode h6,
body.theme-dark-mode .entry-title a {
    color: #ffffff !important;
}

body.theme-dark-mode a {
    color: #bb86fc !important;
}

body.theme-dark-mode a:hover {
    color: #ceadff !important;
}

/* --- Plugin-Specific Elements (HotSoup) --- */
body.theme-dark-mode .hs-container,
body.theme-dark-mode .hs-book-list li,
body.theme-dark-mode .hs-my-book-list li,
body.theme-dark-mode .hs-completed-section {
    background-color: #2a2a2a !important;
    border-color: #444 !important;
    color: #e0e0e0 !important;
}

body.theme-dark-mode .hs-progress-bar-container {
    background-color: #444 !important;
}


