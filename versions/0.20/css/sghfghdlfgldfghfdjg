/* ==========================================================================
   3. Theme Selector (in profile)
   ========================================================================== */
   
.hs-themes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 15px;
    margin-top: 10px;
}

.hs-theme-option label {
    display: block;
    cursor: pointer;
    border: 2px solid #ddd;
    border-radius: 5px;
    padding: 10px;
    text-align: center;
    transition: all 0.2s;
}

.hs-theme-option input[type="radio"] {
    display: none;
}

.hs-theme-option .theme-preview {
    width: 100%;
    height: 80px;
    border-radius: 3px;
    margin-bottom: 10px;
    border: 1px solid rgba(0,0,0,0.1);
}

.hs-theme-option .theme-name {
    font-weight: bold;
    font-size: 1.1em;
}

.hs-theme-option input[type="radio"]:checked + .theme-preview {
    box-shadow: 0 0 0 4px #fff, 0 0 0 6px #0073aa;
}

/* Locked themes */
.hs-theme-option.locked label {
    cursor: not-allowed;
    opacity: 0.6;
    background: #f9f9f9;
}

.hs-theme-option.locked .theme-unlock-message {
    font-size: 0.9em;
    font-style: italic;
    color: #777;
    margin-top: 5px;
    display: block;
}

#hs-theme-selector-feedback {
    margin: 10px 0;
    padding: 10px;
    border-radius: 3px;
}

#hs-theme-selector-feedback.success {
    background: #dff0d8;
    border: 1px solid #d6e9c6;
    color: #3c763d;
}

#hs-theme-selector-feedback.error {
    background: #f2dede;
    border: 1px solid #ebccd1;
    color: #a94442;
}

